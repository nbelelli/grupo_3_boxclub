<%- include('../partials/head') %>

	<%- include('../partials/header') %>

	<body>
		<main>
			<div>
				<div>
					<span>
						<a class="icono_go_back" href="#"
							><i class="fas fa-long-arrow-alt-left fa-lg"></i
						></a>
					</span>
				</div>
				<section class="createEditFormSection">
					<h1 class="formTitle">Carga de Producto</h1>

					<form action="/products/create" method="POST" class="createEditForm" enctype="multipart/form-data" id=prodCreateForm name='createForm'>
						<div class="formRegisterPadding">
							<label for="“name”">Nombre:</label>
							<input
								type="text"
								name="name"
								id="name"
								placeholder="Box Ferrero Rocher"
								class="regAndLogInputs"
							/>
						</div>

						<div class="formRegisterPadding">
							<label for="price">Precio:</label>
							<input
								type="text"
								rows="4"
								cols="50"
								name="price"
								id="price"
								placeholder="1500"
								class="regAndLogInputs"
							/>
						</div>

						<div class="formRegisterPadding">
							<label for="discount">Descuento%:</label>
							<input
								type="number"
								name="discount"
								id="discount"
								class="regAndLogInputs"
								value=0
							/>
						</div>

						<div class="formRegisterPadding">
							<label for="image">Imagen:</label>
							<input type="file" name="image" id="image" multiple="multiple"/>
						</div>

						<div class="formRegisterPadding">
							<label for="category">Categoría:</label>

							<select name="category" id="category" class="regAndLogInputs">

								<% for (category of categories){ %> 
									<option value=<%= category.id %> > <%= category.name %>  

									</option>  
								<% } %> 
							</select>
						</div>

						<div class="formRegisterPadding">
							<label for="stock">Stock:</label>
							<input
								type="number"
								name="stock"
								id="stock"
								class="regAndLogInputs"
							/>
						</div>

						<div class="formRegisterPadding">
							<label for="masvendido">Más vendido</label>
							<input
								type="checkbox"
								name="bestSeller"
								id="masvendido"
								class="regAndLogInputs"
								value="true"
							/>
						</div>

						<div class="formRegisterPadding">
							<label for="description">Descripción:</label>
							<textarea
								rows="4"
								cols="50"
								name="description"
								id="description"
								class="regAndLogInputs"
								placeholder="Este box incluye..."
							></textarea>
						</div>

						<% if(typeof errors!='undefined'){ for (error of errors){ %>
							<li class="errores"><%= error.msg %></li>
							<% } %> <% } %>
						
						<div class="errores" >
							<ul>

							</ul>
						</div>

						<button class="formButton" type="“submit”">Guardar</button>
					</form>
				</section>
			</div>
		</main>

		<%- include('../partials/footer') %>
		<script src="/javascripts/productCreateValidations.js"></script>
	</body>
</html>
